<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_and_registration">

    <fragment
        android:id="@+id/greeting_fragment"
        android:name="com.ilya.presentation.GreetingFragment"
        android:label="GreetingFragment" >
        <action
            android:id="@+id/action_greeting_fragment_to_login_fragment"
            app:destination="@id/login_and_registration" />
    </fragment>
    <navigation android:id="@+id/login_and_registration"
        app:startDestination="@id/login_fragment">
        <fragment
            android:id="@+id/login_fragment"
            android:name="com.ilya.presentation.login.LoginFragment"
            android:label="LoginFragment">
            <action
                android:id="@+id/action_login_fragment_to_registration_fragment"
                app:destination="@id/registration_fragment" />
            <action
                android:id="@+id/action_login_fragment_to_greeting_fragment"
                app:destination="@id/greeting_fragment">
                <argument
                    android:name="userId"
                    app:argType="integer"
                    android:defaultValue="-1" />
            </action>
        </fragment>
        <fragment
            android:id="@+id/registration_fragment"
            android:name="com.ilya.presentation.registration.RegistrationFragment"
            android:label="RegistrationFragment">
            <action
                android:id="@+id/action_registration_fragment_to_login_fragment"
                app:destination="@id/login_fragment" />
        </fragment>
    </navigation>
</navigation>